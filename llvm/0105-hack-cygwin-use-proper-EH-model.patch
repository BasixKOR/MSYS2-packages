Subject: [PATCH 06/15] hack: cygwin use proper EH model

---
 clang/lib/Basic/Targets/X86.h  | 2 ++
 clang/lib/Driver/ToolChain.cpp | 5 +++++
 2 files changed, 7 insertions(+)

diff --git a/clang/lib/Basic/Targets/X86.h b/clang/lib/Basic/Targets/X86.h
index 05c40d001..51ed03f45 100644
--- a/clang/lib/Basic/Targets/X86.h
+++ b/clang/lib/Basic/Targets/X86.h
@@ -17,6 +17,8 @@
 #include "clang/Basic/BitmaskEnum.h"
 #include "clang/Basic/TargetInfo.h"
 #include "clang/Basic/TargetOptions.h"
+#include "llvm/CodeGen/CommandFlags.h"
+#include "llvm/MC/MCTargetOptions.h"
 #include "llvm/Support/Compiler.h"
 #include "llvm/TargetParser/Triple.h"
 #include "llvm/TargetParser/X86TargetParser.h"
diff --git a/clang/lib/Driver/ToolChain.cpp b/clang/lib/Driver/ToolChain.cpp
index e9d1d3534..d564c5802 100644
--- a/clang/lib/Driver/ToolChain.cpp
+++ b/clang/lib/Driver/ToolChain.cpp
@@ -1084,6 +1084,11 @@ ObjCRuntime ToolChain::getDefaultObjCRuntime(bool isNonFragile) const {
 
 llvm::ExceptionHandling
 ToolChain::GetExceptionModel(const llvm::opt::ArgList &Args) const {
+  if (getTriple().getEnvironment() == llvm::Triple::Cygnus) {
+    if (getArch() == llvm::Triple::x86_64)
+      return llvm::ExceptionHandling::WinEH;
+    return llvm::ExceptionHandling::DwarfCFI;
+  }
   return llvm::ExceptionHandling::None;
 }
 
